<h1>Users</h1>
<hr />
<h2><%= @users.length <= 0 ? 'No Users' : "" %></h2>

<div class="columns">
  <% @users.each do |user| %>
  <div class="column">
    <div class="box">
      <div class="content">
        <p><strong><%= link_to user.full_name, user %></strong></p>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec iaculis mauris.</p>
      </div>
    </div>
  </div>
  <% end %>
</div>
