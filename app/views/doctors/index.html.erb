<h1>Doctors</h1>
<hr />
<h2><%= @doctors.length <= 0 ? 'No Doctors' : "" %></h2>

<div class="columns">
  <% @doctors.each do |doctor| %>
  <div class="column">
    <div class="box">
      <div class="content">
        <p><strong><%= link_to 'Dr. ' + doctor.full_name, doctor %></strong></p>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec iaculis mauris.</p>
      </div>
    </div>
  </div>
  <% end %>
</div>
